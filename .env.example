# Database Configuration
# Get from: https://console.neon.tech/ or use Docker PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/markdown_collab?schema=public"

# NextAuth Configuration
# Generate secret with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-in-production"

# Liveblocks (optional - for real-time collaboration)
# Get from: https://liveblocks.io/dashboard
# LIVEBLOCKS_SECRET="sk_liveblocks_your_secret_key_here"
# LIVEBLOCKS_PUBLIC_KEY="pk_liveblocks_your_public_key_here"

# Encryption (for API keys and sensitive data)
# IMPORTANT: Must be at least 32 characters long
# Generate with: openssl rand -base64 32
# DO NOT use the example value in production!
ENCRYPTION_KEY="your-32-character-encryption-key-here-change-this-now"

# Email Service (optional - for notifications)
# If not configured, emails will be logged to console only
# Support for: Gmail, 163, QQ, Outlook, and custom SMTP
#
# Gmail Configuration:
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-16-char-app-password"
SMTP_FROM="MarqDex <your-email@gmail.com>"
#
# 163 Mail Configuration:
# SMTP_HOST="smtp.163.com"
# SMTP_PORT="465"
# SMTP_SECURE="true"
# SMTP_USER="your-email@163.com"
# SMTP_PASS="your-authorization-code"
# SMTP_FROM="MarqDex <your-email@163.com>"
#
# QQ Mail Configuration:
# SMTP_HOST="smtp.qq.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@qq.com"
# SMTP_PASS="your-authorization-code"
# SMTP_FROM="MarqDex <your-email@qq.com>"
#
# Outlook Configuration:
# SMTP_HOST="smtp.office365.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@outlook.com"
# SMTP_PASS="your-password"
# SMTP_FROM="MarqDex <your-email@outlook.com>"

# App Configuration
APP_NAME="MarqDex"
APP_URL="http://localhost:3000"

# Node Environment
NODE_ENV="development"
